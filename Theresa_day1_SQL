create Table Categories(
CategoryID Serial UNIQUE Primary key,      -- Unique identifier for each product category --
CategoryName VARCHAR(50) NOT NULL,
Description VARCHAR(255) NOT NULL);

Select * from Categories

create Table Customers(
CustomerID VARCHAR(5) UNIQUE Primary key,  -- Unique identifier for each customer --
CustomerName VARCHAR(50) NOT NULL,
ContactName VARCHAR(255) NOT NULL,
ContactTitle VARCHAR(50) NOT NULL ,
City VARCHAR(50) NOT NULL,
Country VARCHAR(50) NOT NULL );

Select * from Customers

create Table Employees(
EmployeeID Serial Unique Primary key,    --  Unique identifier for each Employee --
EmployeeName VARCHAR(50) NOT NULL,
Title VARCHAR(50) NOT NULL ,
City VARCHAR(10) NOT NULL,
Country VARCHAR(5) NOT NULL,
ReportTo INT )

Select * from Employees

create Table Orders(
OrderID int Unique Primary key NOT NULL,   -- OrderID should be unique and cannot have null values  --
CustomerID Varchar(5) NOT NULL,
EmployeeID int NOT NULL,
OrderDate Date NOT NULL,
RequiredDate Date NOT NULL,
ShippedDate Date, 
ShipperID int,
Freight Float )

ALTER TABLE orders                                -- CustomerID is a primary key in customers table--
ADD CONSTRAINT fk_order_customer
FOREIGN KEY (CustomerID)
REFERENCES Customers (CustomerID);

ALTER TABLE orders
ADD CONSTRAINT fk_order_Employee                    -- EmployeeID is a primary key in Employees table--
FOREIGN KEY (EmployeeID)
REFERENCES Employees (EmployeeID);

ALTER TABLE orders
ADD CONSTRAINT fk_order_Shipper
FOREIGN KEY (ShipperID)                               -- ShipperID is a primary key in Shippers table--
REFERENCES Shippers (ShipperID);

Select * from Orders

create Table Products(
ProductID Serial Unique Primary Key NOT NULL,    -- Unique identifier for each product  --
ProductName Varchar(50) NOT NULL,
QuantityPerUnit Varchar(50) NOT NULL,
UnitPrice float Not Null,
Discontinued int Not nUll,
CategoryID int NOT NULL)

ALTER TABLE Products                            -- CategoryID is a primary key in Categories table--
ADD CONSTRAINT fk_products_Category 
FOREIGN KEY (CategoryID)
REFERENCES Categories (CategoryID);

Select * from Products

create Table OrdersDetails(
OrderID int NOT NULL,
ProductID int NOT NULL,
UnitPrice Float NOT NULL,
Quantity int NOT NULL,
Discount Float NOT NULL)

ALTER TABLE OrdersDetails                            -- OrderID is a primary key in Orders table--
ADD CONSTRAINT fk_products_Category 
ADD CONSTRAINT fk_OrdersDetails_Orders
FOREIGN KEY (OrderID)
REFERENCES Orders (OrderID)

ALTER TABLE OrdersDetails                                -- ProductID is a primary key in Products table--
ADD CONSTRAINT fk_OrdersDetails_Products
FOREIGN KEY (ProductID)
REFERENCES Products (ProductID);

Select * from OrdersDetails

create Table Shippers(
ShipperID Serial Unique Primary key NOT NULL,   --  Unique identifier for each Shipper--
CompanyName varchar(50) NOT NULL)

Select * from Shippers
